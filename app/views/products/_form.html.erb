<div class="col-md-6 col-md-offset-3">
    <%= form_for(@product) do |f| %>
        <div class="from-group">
            <%= f.label :title, "Name" %>
            <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="from-group">
            <%= f.label :price, "Price" %>
            <%= f.number_field :price, class: 'form-control', min: 1 %>
        </div>

        <%= f.submit "Save", class:'btn btn-success' %>
    <% end %>
</div>